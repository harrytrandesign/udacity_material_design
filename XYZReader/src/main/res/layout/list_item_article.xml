<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_small_four"
    android:layout_marginLeft="@dimen/padding_small_four"
    android:layout_marginRight="@dimen/padding_small_four"
    android:layout_marginTop="@dimen/padding_small_four"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.xyzreader.helper.TwoThirdsImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/article_title"
            style="@style/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/padding_small_four"
            android:paddingLeft="@dimen/padding_standard_sixteen"
            android:paddingRight="@dimen/padding_standard_sixteen"
            android:paddingTop="@dimen/padding_standard_sixteen"
            tools:text="Title"/>

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/padding_standard_sixteen"
            android:paddingLeft="@dimen/padding_standard_sixteen"
            android:paddingRight="@dimen/padding_standard_sixteen"
            android:textColor="@color/black"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
